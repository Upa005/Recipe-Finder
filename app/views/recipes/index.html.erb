<h1>Searching for <%= @search_term %></h1>

<table border = "1" border-collapse: collapse>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Social Rank</th>
  </tr>
  <% @courses.each do |recipe| %>
  <tr>
    <td><%= link_to(image_tag(recipe['image_url'], size: '100'), recipe['image_url']) %></td>
    <td><%= link_to(sanitize(recipe['title']), recipe['source_url']) %></td>
    <td><%= recipe['social_rank'].round %></td>
  </tr>
  <% end %>
</table>

<p><small>Powered By Food2Fork.com</small></p>